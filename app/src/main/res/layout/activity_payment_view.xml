<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeefef"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/name_toolbar_id"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fda700"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/name_menulist_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#eeeff0"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:background="#fcfcfc"
            android:orientation="horizontal">


            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="合计："
                android:id="@+id/name_Total_id"
                android:layout_width="80dp"
                android:layout_height="45dp" />

            <TextView
                android:id="@+id/name_Amountofmoney_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="0$"
                android:textColor="#f22"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_Submit_id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#f7fca600"
            android:gravity="center">

            <TextView
                android:textSize="18dp"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="提交顶订单"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>