<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:background="#ffffff"
    android:layout_marginRight="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_unitPrice_id"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="0"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="回锅肉"
                    android:textSize="20dp"
                    android:textColor="#fca600" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name_money_id"
                       android:gravity="center"
                        android:layout_weight="0"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="￥15.2元"
                        android:textSize="20dp"
                        android:textColor="#fca600" />

                    <ImageView
                        android:id="@+id/name_reduce_id"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iocn_jianw" />

                    <TextView

                        android:id="@+id/name_number_id"
                        android:gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/name_plus_id"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_jia" />
                </LinearLayout>


            </LinearLayout>





</LinearLayout>