<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Layout_laoli3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeefef"
    android:orientation="vertical">

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/name_head_id"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:gravity="center"
        android:visibility="gone">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_head_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_head"
            app:civ_border_color="#ff22" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfd"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_box_layout"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_account" />

            <AutoCompleteTextView

                android:id="@+id/name_account_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.88"
                android:background="@null"
                android:hint="请输入账号"
                android:imeOptions="actionNext"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_box_layout"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_password" />

            <EditText
                android:id="@+id/name_password_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:hint="请输入密码"
                android:imeActionId="@+id/login"
                android:imeActionLabel="密码错误"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>


        <Button
            android:id="@+id/name_login_id"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/index_backeoptc"
            android:elevation="10dp"
            android:text="登   录"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/name_message_id"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="短信登陆"
                android:textColor="#9c9c9c" />

            <Button
                android:id="@+id/name_forget_id"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"
                android:text="忘记密码"
                android:textColor="#9c9c9c" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_zhucei_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfdfd"
        android:visibility="gone">

        <TextView
            android:id="@+id/name_register_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_box_layout"
            android:gravity="center"
            android:text="注   册"
            android:textColor="#ffcc00"
            android:textSize="20dp" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/name_recyclergrzx_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>